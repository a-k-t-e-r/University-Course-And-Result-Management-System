@{
    ViewBag.Title = "UnassignCourses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/jquery-confirm.css" rel="stylesheet" />

<h2>Unassign Courses</h2>

@using (Html.BeginForm("UnassignCourses", "Unassign"))
{
    <div style="position: relative; height: 500px" class="container">
        <div class="col-sm-6 text-center" style="position: absolute; top: 50%; left: 25%;">
            <hr />
            <button id="confirm_msg" type="button" style="width: 350px; height: 100px;" class="btn btn-dark btn-lg">Unassign All Courses</button>
            <hr />
            <hr />
            <hr/>
            <h3 id="confirm-msg"></h3>
        </div>
    </div>
}

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<script src="~/Scripts/jquery-confirm.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $("#confirm_msg").click(function () {
            $("#confirm-msg").text("Unassign All Courses Completed !!!");
        }
        );
    });
</script>